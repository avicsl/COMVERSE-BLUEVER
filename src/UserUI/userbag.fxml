<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="458.0" prefWidth="894.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="UserControllers.UserBagController">
   <children>
      <ImageView fitHeight="514.0" fitWidth="894.0" layoutX="-1.0" layoutY="2.0">
         <image>
            <Image url="@../../../../Downloads/code.jpg" />
         </image>
      </ImageView>

      <!-- Title -->
      <Text fill="#165834" layoutX="290.0" layoutY="52.0" strokeType="OUTSIDE" strokeWidth="0.0" text="BAG" textAlignment="CENTER" wrappingWidth="313.3">
         <font>
            <Font name="Rockwell Bold" size="40.0" />
         </font>
      </Text>

      <!-- TableView with styling -->
      <TableView fx:id="mytable" layoutX="47.0" layoutY="74.0" prefHeight="386.0" prefWidth="800.0"
                 style="-fx-font-family: 'Rockwell'; -fx-selection-bar: #165834;">
         <columns>
            <TableColumn fx:id="productimagecol" prefWidth="252.0" text="Product Image"
                         style="-fx-alignment: CENTER; -fx-font-family: 'Rockwell';" />
            <TableColumn fx:id="productnamecol" prefWidth="347.2" text="Product Name"
                         style="-fx-alignment: CENTER; -fx-font-family: 'Rockwell';" />
            <TableColumn fx:id="pricecol" prefWidth="200.8" text="Price"
                         style="-fx-alignment: CENTER; -fx-font-family: 'Rockwell';" />
         </columns>
      </TableView>

      <!-- Add to Cart Button -->
      <Button fx:id="addtocartbtn" layoutX="47.0" layoutY="468.0" mnemonicParsing="false" onAction="#handleAddToCart"
              prefHeight="26.0" prefWidth="800.0" style="-fx-background-color: #165834;" text="ADD TO CART" textFill="WHITE">
         <font>
            <Font name="Rockwell Bold" size="12.0" />
         </font>
      </Button>
   </children>
</AnchorPane>
